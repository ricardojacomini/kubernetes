{
    "runtimes": {
        "nvidia": {
            "path": "/usr/bin/nvidia-container-runtime",
            "runtimeArgs": []
        }
    },
    "default-runtime": "runc"
    {% if docker_log_driver is defined %},
    "log-driver": "{{ docker_log_driver }}",
    "log-opts": {
        "max-size": "{{ docker_log_max_size }}",
        "max-file": "{{ docker_log_max_file }}"
    }
    {% endif %}
}
